{
	"manifest_version": 3,
	"name": "Taiga Beautifier",
	"version": "1.1",
	"description": "Enhances Taiga's UI by dynamically displaying issue counts.",
	"permissions": ["activeTab", "scripting"],
	"content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["content.js"],
		"css": ["styles.css"],
		"run_at": "document_end"
	  }
	],
	"action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	  }
	}
  }  