{
	"manifest_version": 3,
	"name": "Taiga Beautifier",
	"version": "0.1",
	"description": "Enhances Taiga's UI by dynamically displaying issue counts.",
	"permissions": ["activeTab", "scripting"],
	"content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["content.js"],
		"css": ["styles.css"],
		"run_at": "document_end"
	  }
	],
	"icons": {
		"128": "icon.png"
	},
	"action": {
		"default_icon": "icon.png"
	}
  }  